@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center my-5">
    
    <h1 class="display-4">Welcome, @ViewBag.username!</h1>
    <h1 class="display-4">Nim : 72220530</h1>
    <p class="lead">Check out the list of fruits we have for you:</p>

    
    <ul class="list-group">
        @foreach (var fruit in ViewBag.fruits)
        {
            <li class="list-group-item">@fruit</li>
        }
    </ul>

    
    <div class="my-5">
        <a href="/Home/About" class="btn btn-primary btn-lg">Learn more about us</a>
    </div>
</div>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
